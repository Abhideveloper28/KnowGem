<h1>Gem Information</h1>
<%= link_to 'check gem', root_path %>
<table class="table table-striped table-bordered">
  <tr>
    <th class="width-200">Gem Name</th>
    <th>Description</th>
  </tr>
  <% @info.each do |info| %>
    <tr>
      <td><%= info.name %></td>
      <td><%= info.description %></td>
    </tr>
  <% end %>
  <tr></tr>
</table>
