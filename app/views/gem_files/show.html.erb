<h1>Gem Information</h1>
<%= link_to 'check gem', root_path %>
<table class="table table-striped table-bordered">
  <tr>
    <th class="width-200">Gem Name</th>
    <th>Description</th>
  </tr>
  <tbody id='screen'>
    <% @info.each do |info| %>
      <tr>
        <td>
          <%= link_to info.name, info.href, target: 'blank' %>
        </td>
        <td><%= info.description %></td>
      </tr>
    <% end %>
  </tbody>
  <tr></tr>
</table>

<script>
setTimeout(function(){
   window.location.reload(1);
}, 3000);
</script>
